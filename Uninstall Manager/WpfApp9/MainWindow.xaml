<Window x:Class="WpfApp9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp9"
        mc:Ignorable="d"       
    Title="Unistall Manager" Height="550" Width="750" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" WindowStyle="None" BorderBrush="Black" Background="Transparent" AllowsTransparency="True">
    <Grid x:Name="Form1" Margin="30" Background="White" Loaded="Form1_Loaded">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="15" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
        </Grid.Effect>
        <Label x:Name="exit" Content="r" HorizontalAlignment="Left" Margin="660,5,0,0" VerticalAlignment="Top" FontFamily="Webdings" Foreground="Black" MouseDown="exit_MouseDown" Cursor="Hand" MouseEnter="exit_MouseEnter" MouseLeave="exit_MouseLeave"/>
        <Label x:Name="hide" Content="_" HorizontalAlignment="Left" Margin="641,2,0,0" VerticalAlignment="Top" FontFamily="Verdana Pro SemiBold" Foreground="Black" MouseDown="hide_MouseDown" Cursor="Hand" MouseEnter="hide_MouseEnter" MouseLeave="hide_MouseLeave"/>
        <Label x:Name="title" Content="Uninstall Manager" HorizontalAlignment="Left" Margin="33,7,0,0" VerticalAlignment="Top" Height="36"/>
        <Image HorizontalAlignment="Left" Height="24" Margin="6,5,0,0" VerticalAlignment="Top" Width="26" Source="unist.png"/>
        <ListView x:Name="listView" Margin="2,37" BorderBrush="White" SelectionChanged="listView_SelectionChanged" Foreground="Black">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Height ="46" VerticalAlignment="Stretch">

                        <Image Source="{Binding ImageData}" Width="32" Height="32" />
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="5,0,0,0">
                            <TextBlock Text="{Binding Title}" VerticalAlignment="Center" Margin="4,0,0,0" FontSize="14"/>
                            <TextBlock Text="{Binding Provider}" VerticalAlignment="Center" Margin="4,0,0,0" FontSize="12" Foreground="#FF383838"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ListView x:Name="listView_Copy" Margin="2,37" BorderBrush="White" Visibility="Hidden" SelectionChanged="listView_Copy_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Height ="46" VerticalAlignment="Stretch">

                        <Image Source="{Binding ImageData}" Width="32" Height="32" />
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="5,0,0,0">
                            <TextBlock Text="{Binding Title}" VerticalAlignment="Center" Margin="4,0,0,0" FontSize="14"/>
                            <TextBlock Text="{Binding Provider}" VerticalAlignment="Center" Margin="4,0,0,0" FontSize="12" Foreground="#FF383838"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="40,460,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190" TextChanged="textBox_TextChanged" SelectionOpacity="5" SelectionBrush="#FF252525" BorderBrush="#FFACACAC" OpacityMask="#FF3E3E3E" FontSize="14"/>
        <Image HorizontalAlignment="Left" Height="22" Margin="9,460,0,0" VerticalAlignment="Top" Width="29" Source="search.png" RenderTransformOrigin="-0.621,-0.208"/>
        <Button x:Name="uninstall" Content="Unistall" HorizontalAlignment="Left" Margin="574,459,0,0" VerticalAlignment="Top" Width="111" Height="23" Background="LightGray" BorderBrush="#FFB4B4B4" IsEnabled ="false" Click="unistall_Click"/>
    </Grid>
</Window>
